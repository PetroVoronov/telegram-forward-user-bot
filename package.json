{
  "name": "telegram-forward-user-bot",
  "version": "1.0.99",
  "description": "A Telegram \"bot\" working as user, using MTProto via [gramjs](https://github.com/gram-js/gramjs), to forward messages between chats/groups/channels. Configurable via Bot menu.",
  "main": "src/index.js",
  "keywords": [
    "telegram",
    "bot",
    "forward",
    "MTProto",
    "TDLib"
  ],
  "author": "Petro Voronov <petro.voronov@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "emoji-regex": "^10.3.0",
    "i18n": "^0.15.1",
    "json-stringify-safe": "^5.0.1",
    "node-localstorage": "^3.0.5",
    "strftime": "^0.10.3",
    "telegram": "^2.23.10",
    "yargs": "^17.7.2"
  },
  "scripts": {
    "preversion": "genversion src/version.js --property name,version",
    "tag" : "git tag -a v$npm_package_version -m \"Version $npm_package_version\"",
    "tag-push" : "git push origin --tags",
    "lint": "eslint .",
    "start": "node src/index.js",
    "debug": "node src/index.js --debug",
    "help": "node src/index.js --help"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/eslint-parser": "^7.25.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-sonarjs": "^1.0.4",
    "genversion": "^3.2.0",
    "globals": "^15.8.0"
  }
}
